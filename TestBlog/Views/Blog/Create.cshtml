@model TestBlog.Models.Blog

@{
    ViewData["Title"] = "Blog | Create";
}

<div class="row justify-content-center">
    <div class="col-lg-7">
        <form method="post">
            <div class="mb-3">
                <label asp-for="Title">Title</label>
                <input type="text" asp-for="Title"  class="form-control"/>
            </div>

            <div class="mb-3">
                <label asp-for="Intro">Title</label>
                <input type="text" asp-for="Intro" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Body">Title</label>
                <input type="text" asp-for="Body" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="CategoryId">Category</label>
                @Html.DropDownList("CategoryId", (IEnumerable<SelectListItem>)ViewBag.Categories, new { @class = "form-select" })
            </div>

            <button class="btn btn-sm btn-primary">Create Blog</button>
        </form>
    </div>
</div>